{% if product.sections.testimonials.size > 0 %}
<section class="py-5 testimonials-section">
  
  <div class="container reveal-on-scroll text-center">
    <h2 class="text-uppercase font-header gradient-text3 mb-4" style="font-size: 6rem;">
      USED BY PROS
    </h2>
  </div>

  <div class="container reveal-on-scroll">
    <div class="testimonial-card-bg">
      <div class="row g-5">
        
        {% for testimonial in product.sections.testimonials %}
        <div class="col-lg-4">
          <div class="testimonial-item">
            
            <img src="{{ testimonial.image | default: '/assets/images/reviewers/default-avatar.jpg' }}" 
                 alt="{{ testimonial.author }}" 
                 class="testimonial-avatar">

            <div class="text-content">
              <div class="testimonial-quote">
                "{{ testimonial.quote }}"
              </div>
              
              <div class="mt-auto">
                <div class="testimonial-author">{{ testimonial.author }}</div>
                <div class="testimonial-role">{{ testimonial.role }}</div>
                <div class="testimonial-bands">{{ testimonial.bands }}</div>
              </div>
            </div>

          </div>
        </div>
        {% endfor %}

      </div>
    </div>
  </div>

</section>
{% endif %}