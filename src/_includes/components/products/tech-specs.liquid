{% if product.sections.techSpecs.items.size > 0 %}
<section class="tech-specs-section">
  
  <div id="tech-bg-layer" class="tech-specs-bg" style="background-color: #000;">
    <div class="tech-bg-overlay"></div>
  </div>

  <div class="container position-relative z-index-2 h-100">
    <div class="row h-100">
      
      <div class="col-lg-7 col-md-6">
        <div class="tech-titles-wrapper">
          <div class="d-flex flex-column gap-1">
            {% for item in product.sections.techSpecs.items %}
            <div class="tech-item-title font-header" 
                 data-bg="{{ item.background }}" 
                 data-text="{{ item.text }}"
                 onmouseover="updateTechSpec(this)"
                 onclick="updateTechSpec(this)">
              {{ item.title }}
            </div>
            {% endfor %}
          </div>
        </div>
      </div>

      <div class="col-lg-5 col-md-6">
        <div class="tech-description-box reveal-on-scroll">
          <p id="tech-text-target" class="font-body text-white tech-desc-text" style="opacity: 0;">
          </p>
        </div>
      </div>

    </div>
  </div>
</section>

{% endif %}
<script src="/assets/js/product-tech.js"></script>