<div id="sticky-product-footer" class="sticky-footer-wrapper">
  <div class="container-fluid px-1 px-md-5 d-flex justify-content-between align-items-center">
    
    <div>
      <img src="{{ product.logo }}" alt="{{ product.name }}" class="sticky-footer-logo">
    </div>

    <div class="text-white-50 small d-none d-xl-block mx-auto">
      {{ product.discountText }}
    </div>

    <div class="d-flex gap-2 gap-md-3 align-items-center">
       <a href="{{ product.buyLink }}" class="btn btn-pill btn-brand-solid">
         BUY {{product.price}}
       </a>
       
       {% if product.demoLink %}
       <a href="{{ product.demoLink }}" class="btn btn-pill btn-grey-solid ms-sm-3">
         Download Trial
       </a>
       {% endif %}
    </div>

  </div>
</div>