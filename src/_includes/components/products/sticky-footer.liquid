<div id="sticky-product-footer" class="sticky-footer-wrapper">
  <div class="container-fluid px-0 px-sm-2 px-md-5 d-flex justify-content-between align-items-center restrict-width">
    
    <div>
      {% if product.assets.logo %}
        <img src="{{ product.assets.logo }}" alt="{{ product.name }}" class="sticky-footer-logo">
      {% else %}
        <h2 class="font-header">
          {{ product.name }}
        </h2>
      {% endif %}
    </div>

    <div class="text-white-50 sticky-footer-center small d-none d-xl-block mx-auto">
      Buy <a href="/products/phaturator/">PHATurator</a> by 1st March to join the <a href="/founders">Founders' Club</a>
    </div>

    <div class="d-flex gap-2 gap-md-3 align-items-center">
      <a href="{{ product.buyLink }}" class="btn btn-pill btn-brand-solid">
        BUY
      </a>
      
      {% if product.demoLink %}
      <a href="{{ product.demoLink }}" class="btn btn-pill btn-grey-solid ms-sm-3">
        <span class="d-inline d-sm-none">Try</span>
        
        <span class="d-none d-sm-inline">Try for Free</span>
      </a>
      {% endif %}
    </div>

  </div>
</div>