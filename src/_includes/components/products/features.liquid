<section class="features-section text-dark">
  
  <div class="features-sticky-viewport">
    
    <div class="container-fluid">
      
      <div class="text-center mb-5 reveal-on-scroll">
        <h2 class="text-uppercase font-header gradient-text-features">
          {{ product.sections.features.title }}
        </h2>
      </div>

      <div class="features-scroll-container" id="featuresScrollTrack">
        
        {% for item in product.sections.features.items %}
        <div class="feature-card-wrapper">

          {% if item.type == 'text' %}
          <div class="feature-card-white">
            <h3 class="fw-bold mb-3 font-body">{{ item.title }}</h3>
            <p class="mb-0">{{ item.text }}</p>
          </div>

          {% elsif item.type == 'image' %}
          <div class="feature-card-image">
            
            {% if item.imagePosition == 'top' %}
              {% image item.image, item.title, "(min-width: 768px) 33vw, 90vw", "feature-img-display" %}
              <div class="mt-3 text-dark"> 
                <h3 class="fw-bold mb-3 font-body">{{ item.title }}</h3>
                <p class="mb-0">{{ item.text }}</p>
              </div>

            {% else %}
              <div class="mb-3 text-dark">
                 <h3 class="fw-bold mb-3 font-body">{{ item.title }}</h3>
                 <p class="mb-0">{{ item.text }}</p>
              </div>
              {% image item.image, item.title, "(min-width: 768px) 33vw, 90vw", "feature-img-display" %}
            {% endif %}

          </div>
          {% endif %}

        </div>
        {% endfor %}

      </div> </div>
  </div> </section>

<script src="/assets/js/features.js"></script>