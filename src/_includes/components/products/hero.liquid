<section class="hero-v2 text-center d-flex flex-column align-items-center justify-content-center {% if product.type == 'ir' %}hero-gradient-bg{% endif %}">
  
  {% if product.assets.heroVideo %}
    <video autoplay muted loop playsinline class="no-reveal" poster="{{ product.assets.heroPoster }}">
      <source src="{{ product.assets.heroVideo }}" type="video/mp4">
    </video>
  {% endif %}

  <div class="video-overlay"></div>

  <div class="container position-relative" style="z-index: 2;">
    <p class="text-uppercase mb-3 mb-md-5 product-badge">{{ product.badge }}</p>
    
    {% image product.assets.logo, product.name, "(min-width: 768px) 400px, 80vw", "hero-logo-img mb-4" %}
    
    <h2 class="h3 mb-5 font-body">
      {{ product.headline }}
    </h2>

    <div class="hero-product-container mb-5">
      
      {% if product.type == 'plugin' %}
        <div class="gradient-border-wrap">
          {% if product.assets.heroImage %}
            {% image product.assets.heroImage, product.name, "(min-width: 1024px) 60vw, 100vw", "img-fluid" %}
          {% endif %}
        </div>

      {% else %}
        {% if product.assets.heroImage %}
          {% image product.assets.heroImage, product.name, "(min-width: 768px) 500px, 100vw", "img-fluid hero-box-art" %}
        {% endif %}

      {% endif %}

    </div>

    <div class="carousel-actions d-flex justify-content-center align-items-center mb-4 gap-3 flex-wrap">
      
      <a href="{{ product.buyLink }}" class="btn btn-pill btn-brand-solid btn-lg">BUY</a>
      
      <div class="d-flex align-items-center gap-2">
        {% if product.originalPrice %}
        <span class="text-decoration-line-through fs-5 text-white-50">{{ product.originalPrice }}</span>
        {% endif %}
        <span class="text-white fs-4 fw-bold pink-price">{{ product.price }}</span>
      </div>

      {% if product.demoLink %}
        <a href="{{ product.demoLink }}" class="text-white-50 text-decoration-underline small text-uppercase ms-2 hero-try-link">
          Try for Free
        </a>
      {% endif %}

    </div>

    {% if product.discountText %}
      <div class="mt-3">
        <p class="small text-white-50 m-0">{{ product.discountText }}</p>
      </div>
    {% endif %}

    {% if product.heroSubText %}
      <div class="mt-4">
        <p class="text-uppercase product-badge">{{ product.heroSubText }}</p>
      </div>
    {% endif %}

  </div>
</section>