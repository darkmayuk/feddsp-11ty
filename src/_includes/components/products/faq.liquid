<section class="py-5 bg-dark-grey">
  <div class="container py-5 reveal-on-scroll">
    
    <h2 class="text-center text-uppercase mb-5">{{ product.sections.faq.title }}</h2>

    <div class="text-start mx-auto faq-v2" style="max-width: 800px;">
      
      {% for item in product.sections.faq.items %}
      <details class="border-bottom border-secondary">
        <summary class="h5 text-white d-flex justify-content-between align-items-center cursor-pointer list-unstyled" style="padding: 1.5rem 0;">
          {{ item.q }}
        </summary>
        <div class="pb-4 text-white-50">
          {{ item.a }}
        </div>
      </details>
      {% endfor %}

    </div>
  </div>
</section>

<script src="/assets/js/faq.js"></script>