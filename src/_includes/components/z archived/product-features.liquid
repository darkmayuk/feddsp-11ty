<section class="product-features bg-black text-white py-5 restrict-width">
  <div class="container-fluid">

    <div class="row align-items-center mb-4">

      <div class="col-lg-3 mb-4 text-start">
        <h3 class="text-uppercase gradient-text">{{ product.header1 }}</h3>
        {% assign lines = product.description1 | split: "\n" %}
          {% for line in lines %}
            <p class="product-feature-text">{{ line }}</p>
          {% endfor %}
      </div>

      <div class="col-lg-6 mb-5">
        <img 
          src="{{ product.image }}" 
          alt="{{ product.name }} main image" 
          class="img-fluid rounded-4 product-feature-image mx-lg-auto">
      </div>

      <div class="col-lg-3 text-start">
        <h3 class="text-uppercase gradient-text">{{ product.header2 }}</h3>
        {% assign lines = product.description2 | split: "\n" %}
          {% for line in lines %}
            <p class="product-feature-text">{{ line }}</p>
          {% endfor %}
      </div>

    </div>

    <div class="row product-feature-row">
      {% for img in product.social %}
        <div class="col-lg-4 col-12 d-flex justify-content-center">
          <div
            class="product-feature-box"
            style="background-image: url('{{ img }}');"
          ></div>
        </div>
      {% endfor %}
    </div>

  </div>
</section>
