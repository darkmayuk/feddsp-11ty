<section class="product-videos d-flex align-items-center justify-content-center py-5"
         style="background-color: {{ product.heroColour | default: '#000' }};">
  <div class="container text-center">
    {% for video in product.videos %}
      <div class="ratio ratio-16x9 mb-5 product-video-wrap">
        <iframe
          src="{{ video.embed }}"
          title="{{ product.name }} video {{ forloop.index }}"
          allowfullscreen
          class="rounded-4 border-0">
        </iframe>
      </div>
    {% endfor %}
  </div>
</section>

