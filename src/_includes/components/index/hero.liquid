<section class="index-hero-section position-relative d-flex align-items-center shingle-overlap">

  <div class="hero-bg-layer">
    {% image "/assets/images/backgrounds/fedDSP_analogue1.jpg", "Analogue hardware knobs", "(min-width: 1024px) 100vw, 100vw", "hero-bg-img" %}
  </div>

  <div class="hero-overlay-layer"></div>

  <div class="position-relative w-100 restrict-width" style="z-index: 2;">
    <div class="hero-content-block">
      
      <h1 class="hero-headline text-uppercase text-white mb-4">
        {{ texts.index.heroHeadline | newline_to_br }}
      </h1>

      <div class="hero-subtext text-white">
        {% assign lines = texts.index.heroSub | split: "\n" %}
        {% for line in lines %}
          <p class="mb-2">{{ line }}</p>
        {% endfor %}
      </div>

    </div>
  </div>

</section>