<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<section id="product-carousel">
  <div id="productsCarousel" class="swiper bg-white text-black rounded-4 p-5">
    <!-- Slides -->
    <div class="swiper-wrapper">
      {% for product in products %}
        <div class="swiper-slide">
          <div class="slide-body">
            <!-- Header -->
            <div class="row g-4 align-items-start">
              <div class="col-sm-auto pe-4">
                <h3>{{ product.name }}</h3>
              </div>
              <div class="col-sm">
                <p>{{ product.description }}</p>
              </div>
              <div class="col-sm">
                <p>{{ product.extraText }}</p>
              </div>
            </div>

            <!-- Main product image -->
            <div class="product-img-wrap my-4 rounded-4">
              <img src="{{ product.image }}" alt="{{ product.name }}" class="product-main-img">
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Actions + indicators -->
    <div class="carousel-actions d-flex justify-content-center align-items-center gap-4 mt-3">
      <!-- Swiper will populate bullets here -->
      <div class="carousel-indicators custom-indicators swiper-pagination position-static m-0"></div>

      <a href="{{ product.buyLink }}" class="btn btn-lg product-btn" data-ls-overlay>BUY</a>
      <a href="{{ product.learnMoreLink }}" class="product-learn">Learn More</a>
    </div>
  </div>
</section>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  const swiper = new Swiper('#productsCarousel', {
    slidesPerView: 1,
    loop: false,
    effect: 'slide',
    speed: 450,                             // Bootstrap-ish feel
    autoplay: { delay: 5000, pauseOnMouseEnter: true, disableOnInteraction: false },
    pagination: {
      el: '#productsCarousel .swiper-pagination',
      clickable: true,
      bulletElement: 'button'
    },
    // match Bootstrap "hover to pause" behaviour above via autoplay
  });
</script>
