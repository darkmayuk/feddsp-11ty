<section id="product-carousel">
  <div id="productsCarousel"
       class="carousel slide bg-white text-black rounded-4 p-5"
       data-bs-ride="carousel"
       data-bs-interval="5000"
       data-bs-pause="hover">

    <!-- Slides -->
    <div class="carousel-inner">
      {% for product in products %}
        <div class="carousel-item {% if forloop.first %}active{% endif %}">
          <div class="slide-body">
            <!-- Header -->
            <div class="row g-4 align-items-start">
              <div class="col-sm-auto pe-4">
                <h3>{{ product.name }}</h3>
              </div>
              <div class="col-sm">
                <p>{{ product.description }}</p>
              </div>
              <div class="col-sm">
                <p>{{ product.extraText }}</p>
              </div>
            </div>

            <!-- Main product image -->
            <div class="product-img-wrap my-4 rounded-4">
              <img src="{{ product.image }}"
                   alt="{{ product.name }}"
                   class="product-main-img">
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Actions + indicators -->
    <div class="carousel-actions d-flex justify-content-center align-items-center gap-4 mt-3">
      <div class="carousel-indicators custom-indicators position-static m-0">
        {% for product in products %}
          <button type="button"
                  data-bs-target="#productsCarousel"
                  data-bs-slide-to="{{ forloop.index0 }}"
                  class="{% if forloop.first %}active{% endif %}"
                  aria-current="{% if forloop.first %}true{% endif %}"
                  aria-label="Slide {{ forloop.index }}">
          </button>
        {% endfor %}
      </div>

      <a href="{{ product.buyLink }}"
         class="btn btn-lg product-btn"
         data-ls-overlay>BUY</a>
      <a href="{{ product.learnMoreLink }}" class="product-learn">Learn More</a>
    </div>

  </div>
</section>
