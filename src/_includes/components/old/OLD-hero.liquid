<section class="hero position-relative">

  <img src="/assets/images/fedHero.jpg" 
       alt="fedDSP hero image" 
       class="w-100"
       style="height: calc(100vh - 56px); object-fit: cover;">

  <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>

  <div class="hero-text position-absolute top-50 start-50 translate-middle text-center text-white px-3">
    <h1 class="display-3 text-uppercase">{{ texts.heroHeadline }}</h1>
    <p class="lead">{{ texts.heroSub }}</p>
  </div>
</section>

