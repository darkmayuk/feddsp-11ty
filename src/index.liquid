layout: layouts/base.liquid
title: Home
featuredProductId: phaturator
---

{% assign featured = null %}
{% for p in products %}
  {% if p.id == featuredProductId %}
    {% assign featured = p %}
    {% break %}
  {% endif %}
{% endfor %}

{% include "components/index/hero.liquid" %}

<div style="
  --hero-gradient-start: {{ featured.gradients.gradientStart | default: '#ff00ff' }}; 
  --hero-gradient-end: {{ featured.gradients.gradientEnd | default: '#00ffff' }};
">
  {% include "components/index/product-showcase.liquid", product: featured %}
</div>

{% include "components/index/sample-carousel.liquid" %}

{% include "components/index/free-carousel.liquid" %}

{% include "components/index/ir-carousel.liquid" %}

{% include "components/index/about.liquid" %}

{% include "components/index/contact.liquid" %}

{% assign product = featured %}
{% include "components/products/sticky-footer.liquid", product: featured %}

