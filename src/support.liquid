---
permalink: /support/index.html
layout: layouts/base.liquid
title: Support
description: {{ support.pageDescription }}
---

<section class="support-section py-5">
  <div class="container restrict-width">
    
    <div class="mb-4">
      <h1 class="text-uppercase mb-3">{{ support.pageTitle }}</h1>
      <p class="text-white-50">{{ support.pageDescription }}</p>
    </div>

    <div class="row g-3 mb-5">
      {% for link in support.quickLinks %}
      <div class="col-auto me-5">
        <a href="{{ link.url }}" class="btn btn-pill btn-brand-solid">
          {{ link.text }}
        </a>
      </div>
      {% endfor %}
    </div>

    <div class="mb-5">
      <div class="input-group input-group-lg fed-search-bar">
        <span class="input-group-text bg-dark border-0 text-white-50">
          <i class="bi bi-search"></i>
        </span>
        <input type="text" 
               id="faqSearch" 
               class="form-control bg-dark border-secondary text-white" 
               placeholder="Search for answers (e.g., 'install', 'payment', 'license')..."
               aria-label="Search Support">
      </div>
    </div>

    <div id="faqContainer">
      {% for category in support.categories %}
        <div class="faq-category mb-5">
          <h2 class="text-uppercase mb-4">{{ category.title }}</h2>
          
          {% for item in category.items %}
            <details class="faq-item mb-3 p-3 bg-black border border-secondary rounded-3">
              <summary class="faq-question text-white cursor-pointer" style="list-style: none;">
                {{ item.question }}
              </summary>
              <div class="faq-answer mt-3">
                {{ item.answer }}
              </div>
            </details>
          {% endfor %}
        </div>
      {% endfor %}
    </div>

    <div id="noResults" class="text-center py-5 d-none">
      <p class="text-white-50">No results found. Please try a different keyword or contact support below.</p>
    </div>

    <div class="mt-5 pt-4">
      <p class="mb-3">{{ support.contact.text }} 
      <a href="mailto:{{ support.contact.email }}" class="text-brand text-decoration-none fw-bold text-brand-pink support-link">{{ support.contact.email }}</a>
      </p>
    </div>

  </div>
</section>

<script src="/assets/js/support.js"></script>